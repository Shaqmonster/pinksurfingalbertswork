{
    "description": "cross platform sdks",
    "author": "Albert Camings",
    "private": true,
    "type": "module",
    "workspaces": [
      "packages/websdk3",
      "packages/core",
      "packages/checkout/commons",
      "packages/checkout/merchant",
      "packages/checkout/wallet"
    ],
    "license": "ISC",
    "lint-staged": {
      "**/*.ts": [
        "eslint --fix",
        "prettier --write --ignore-unknown",
        "jest --bail --findRelatedTests --passWithNoTests"
      ]
    },
    "devDependencies": {
      "@eslint/js": "^9.22.0",
      "@types/jest": "^29.5.14",
      "dts-bundle-generator": "^9.5.1",
      "eslint": "^9.22.0",
      "eslint-config-prettier": "^10.1.1",
      "eslint-plugin-headers": "^1.2.1",
      "husky": "^9.1.7",
      "jest": "^29.7.0",
      "jest-environment-jsdom": "^29.7.0",
      "js-yaml": "^4.1.0",
      "lint-staged": "^15.4.3",
      "openapi-typescript-codegen": "^0.27.0",
      "prettier": "^3.5.3",
      "prettier-plugin-sort-imports": "^1.8.6",
      "ts-jest": "^29.2.6",
      "ts-node": "^10.9.2",
      "tsup": "^8.4.0",
      "typedoc": "^0.27.9",
      "typedoc-plugin-markdown": "^4.4.2",
      "typedoc-plugin-missing-exports": "^3.1.0",
      "typedoc-plugin-rename-defaults": "^0.7.2",
      "typescript": "^5.8.2",
      "typescript-eslint": "^8.26.0"
    },
    "scripts": {
      "prepare": "husky",
      "build": "npm run build:core && npm run build:websdk3 && npm run build:checkout-commons && npm run build:checkout-merchant && npm run build:checkout-wallet",
      "build:websdk3": "npm run build --workspace=@loginid/websdk3",
      "lint:websdk3": "npm run lint --workspace=@loginid/websdk3",
      "test:websdk3": "npm run test --workspace=@loginid/websdk3",
      "docs:websdk3": "npm run docs --workspace=@loginid/websdk3",
      "delete-maps:websdk3": "npm run delete-maps --workspace=@loginid/websdk3",
      "build:core": "npm run build --workspace=@loginid/core",
      "lint:core": "npm run lint --workspace=@loginid/core",
      "test:core": "npm run test --workspace=@loginid/core",
      "delete-maps:core": "npm run delete-maps --workspace=@loginid/core",
      "build:checkout-commons": "npm run build --workspace=@loginid/checkout-commons",
      "lint:checkout-commons": "npm run lint --workspace=@loginid/checkout-commons",
      "test:checkout-commons": "npm run test --workspace=@loginid/checkout-commons",
      "build:checkout-merchant": "npm run build --workspace=@loginid/checkout-merchant",
      "lint:checkout-merchant": "npm run lint --workspace=@loginid/checkout-merchant",
      "test:checkout-merchant": "npm run test --workspace=@loginid/checkout-merchant",
      "docs:checkout-merchant": "npm run docs --workspace=@loginid/checkout-merchant",
      "delete-maps:checkout-merchant": "npm run delete-maps --workspace=@loginid/checkout-merchant",
      "build:checkout-wallet": "npm run build --workspace=@loginid/checkout-wallet",
      "lint:checkout-wallet": "npm run lint --workspace=@loginid/checkout-wallet",
      "test:checkout-wallet": "npm run test --workspace=@loginid/checkout-wallet",
      "docs:checkout-wallet": "npm run docs --workspace=@loginid/checkout-wallet",
      "delete-maps:checkout-wallet": "npm run delete-maps --workspace=@loginid/checkout-wallet"
    }
  }
  